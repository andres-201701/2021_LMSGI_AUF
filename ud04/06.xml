<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet tupe="text/css" href="06.css" ?>
<!DOCTYPE lenguaje [
    <!ELEMENT lenguaje (codigo+)>
    <!ELEMENT codigo (nombre, ejemplo)>
    <!ELEMENT nombre (#PCDATA)>
    <!ELEMENT ejemplo (#PCDATA)>
]>

<lenguaje>
    <codigo>
        <nombre>html</nombre>
        <ejemplo>
            <![CDATA[
            <ul>
                <li>Pedro</li>
                <li>Juan</li>
                <li>Pedrito</li>
            </ul>
                ]]>
        </ejemplo>
            
    </codigo>
    <codigo>
        <nombre>JAVA</nombre>
        <ejemplo>
            <![CDATA[
            system.out.println("texto");
                ]]>
        </ejemplo>
            
    </codigo>
</lenguaje>
